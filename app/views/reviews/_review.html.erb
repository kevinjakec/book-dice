<div  id="<%= dom_id review %>" class="w-full mx-auto bg-white rounded-lg overflow-hidden shadow-lg p-8 gap-4 my-2">
      <div
        class="max-w-lg px-8 rounded-md"
      >
        <div class="space-y-1">
          <p class="text-xl font-medium leading-5 text-gray-900">
            <%= review.body %>
          </p>
        </div>
        <div class="mt-6 flex items-center space-x-2">
          <span class="text-sm font-semibold leading-5 text-gray-600"><%= review.reviewer.email %></span>
          
        </div>
        <p class="mt-2 text-sm font-medium leading-5 text-gray-500"><%= time_ago_in_words(review.created_at) %></p>
      </div>
    
  </div>

  <% if action_name != "show" %>
    <%= link_to "Show this review", review, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this review', edit_review_path(review), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>