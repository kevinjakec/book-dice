<div class="w-full">
  <%= form_with(model: [book, review]) do |form| %>
    <div class="my-5">
      <%= form.label :body, label %>
      <%= form.text_area :body, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

  <%= render 'shared/submit', button_text: btn_label, form: form %>
  <% end %>
</div>