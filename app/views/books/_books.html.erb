<div class="w-full mx-auto bg-white rounded-lg overflow-hidden shadow-lg p-8">
  <%= link_to book do %>
    <div class="relative">
      <%= image_tag book.cover_image, class: "w-full h-64 object-scale-down" %>
      <div class="absolute inset-0 bg-black opacity-0 hover:opacity-50 transition-opacity"></div>
    </div>
  <% end %>
  <div class="p-4">
    <div class="flex justify-between">
    <h3 class="text-lg font-bold mb-2"><%= book.title %></h3>
    <% if current_user && current_user.id == book.submitted_by_id %>
        <%= link_to edit_book_path(book), class: "text-gray-500 hover:text-gray-900" do %>
        <i class="fa-solid fa-pen-to-square"></i>

        <% end %>
    <% end %>
    </div>
    <p class="text-gray-600 mb-2"><%= book.author %></p>
    <div class="flex justify-start items-center my-2">
      <p class="text-gray-600">Rating: <%= book.rating %></p>
    </div>
  </div>
</div>
